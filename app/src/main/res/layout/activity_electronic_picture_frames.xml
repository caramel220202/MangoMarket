<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PictureFrame.ElectronicPictureFramesActivity">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/firstRowLinearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="5dp"
        app:layout_constraintDimensionRatio="H,3:1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image11"
            android:layout_width="0dp"
            android:padding="3dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/image12"
            android:layout_width="0dp"
            android:padding="3dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/image13"
            android:layout_width="0dp"
            android:padding="3dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_weight="1"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/secondRowLinearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/firstRowLinearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="H,3:1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image21"
            android:layout_width="0dp"
            android:padding="3dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/image22"
            android:layout_width="0dp"
            android:padding="3dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/image23"
            android:layout_width="0dp"
            android:padding="3dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_weight="1"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <Button
        android:id="@+id/startPictureFrameModeBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="전자액자 실행하기"
        android:textSize="18dp"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/addPhotoBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="사진추가하기"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@id/startPictureFrameModeBtn"
        android:layout_margin="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>