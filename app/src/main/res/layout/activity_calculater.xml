<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculaterActivity">

    <View
        android:id="@+id/topLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/keypadTableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1" />

    <TextView
        android:id="@+id/expressTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:gravity="end"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="44dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />
    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/keypadTableLayout"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:gravity="end"
        android:textSize="20dp"

        />
    <TableLayout
        android:id="@+id/keypadTableLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:shrinkColumns="*"
        android:paddingTop="21dp"
        android:paddingBottom="21dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLayout"
        app:layout_constraintVertical_weight="1.5">

        <TableRow
            android:layout_weight="1">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/clearBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="clearBtnClicked"
                android:text="C"
                android:layout_margin="7dp"
                android:textSize="24dp"
                android:background="@drawable/round_background_btn"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="( )"
                android:enabled="false"
                android:layout_margin="7dp"
                android:textSize="24dp"
                android:textColor="@color/green"
                android:background="@drawable/round_background_btn"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/remainderBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="buttonClicked"
                android:text="%"
                android:textColor="@color/green"
                android:layout_margin="7dp"
                android:textSize="24dp"
                android:background="@drawable/round_background_btn"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/divisionBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="buttonClicked"
                android:text="÷"
                android:textColor="@color/green"
                android:layout_margin="7dp"
                android:textSize="24dp"
                android:background="@drawable/round_background_btn"/>

        </TableRow>

        <TableRow android:layout_weight="1">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sevenBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="buttonClicked"
                android:text="7"
                android:layout_margin="7dp"
                android:textSize="24dp"
                android:background="@drawable/round_background_btn"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/eightBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="buttonClicked"
                android:text="8"
                android:layout_margin="7dp"
                android:textSize="24dp"
                android:background="@drawable/round_background_btn"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nineBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="buttonClicked"
                android:text="9"
                android:layout_margin="7dp"
                android:textSize="24dp"
                android:background="@drawable/round_background_btn"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/multiplyBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="buttonClicked"
                android:text="x"
                android:textColor="@color/green"
                android:layout_margin="7dp"
                android:textSize="24dp"
                android:background="@drawable/round_background_btn"/>
        </TableRow>

        <TableRow android:layout_weight="1">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fourBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="buttonClicked"
                android:text="4"
                android:layout_margin="7dp"
                android:textSize="24dp"
                android:background="@drawable/round_background_btn"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fiveBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="buttonClicked"
                android:text="5"
                android:layout_margin="7dp"
                android:textSize="24dp"
                android:background="@drawable/round_background_btn"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sixBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="buttonClicked"
                android:text="6"
                android:layout_margin="7dp"
                android:textSize="24dp"
                android:background="@drawable/round_background_btn"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/minusBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="buttonClicked"
                android:text="-"
                android:textColor="@color/green"
                android:layout_margin="7dp"
                android:textSize="24dp"
                android:background="@drawable/round_background_btn"/>
        </TableRow>

        <TableRow android:layout_weight="1">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/oneBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="buttonClicked"
                android:text="1"
                android:layout_margin="7dp"
                android:textSize="24dp"
                android:background="@drawable/round_background_btn"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/twoBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="buttonClicked"
                android:text="2"
                android:layout_margin="7dp"
                android:textSize="24dp"
                android:background="@drawable/round_background_btn"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/threeBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="buttonClicked"
                android:text="3"
                android:layout_margin="7dp"
                android:textSize="24dp"
                android:background="@drawable/round_background_btn"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/plusBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="buttonClicked"
                android:text="+"
                android:textColor="@color/green"
                android:layout_margin="7dp"
                android:textSize="24dp"
                android:background="@drawable/round_background_btn"/>
        </TableRow>

        <TableRow android:layout_weight="1">
            <ImageButton
                android:id="@+id/historyBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="historyBtnClicked"
                android:text=""
                android:src="@drawable/ic_baseline_access_time_24"
                android:layout_margin="7dp"
                android:textSize="24dp"
                android:background="@drawable/round_background_btn"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/zeroBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="buttonClicked"
                android:text="0"
                android:layout_margin="7dp"
                android:textSize="24dp"
                android:background="@drawable/round_background_btn"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/floatBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="buttonClicked"
                android:text="."
                android:layout_margin="7dp"
                android:textSize="24dp"
                android:background="@drawable/round_background_btn"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/resultBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="resultBtnnClicked"
                android:text="="
                android:textColor="@color/white"
                android:layout_margin="7dp"
                android:textSize="24dp"
                android:background="@drawable/round_background_btn_green"/>
        </TableRow>


    </TableLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/historyLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="@id/keypadTableLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        tools:visibility="visible"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/closeBtn"
            android:text="닫기"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:stateListAnimator="@null"
            android:background="@null"
            android:onClick="closeHistoryBtnClicked"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/closeBtn"
            app:layout_constraintBottom_toTopOf="@id/historyClearBtn"
            >
            <LinearLayout
                android:id="@+id/historyLinearLayout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"/>
        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/historyClearBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="historyClearBtnClicked"
            android:layout_marginStart="47dp"
            android:layout_marginEnd="47dp"
            android:layout_marginBottom="38dp"
            android:background="@drawable/round_background_btn_green"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:text="계산기록 삭제"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>